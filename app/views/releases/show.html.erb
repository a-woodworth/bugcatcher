<div class="container container-buffer">
  <div class="row">
    <div class="col-md-8">
      <div class="project-description">
        <h2><%= truncate(@release.title, length: 50) %></h2>
        <h4><%= truncate(@project.name, length: 90) %></h4>
        <%= link_to "Close release", close_project_release_url(@project, @release) %> |
        <%= link_to "Edit release", edit_project_release_url(@project, @release) %>|
        <%= link_to "Delete release", project_release_url(@project, @release), method: "delete" %>
      </div>
      <hr />
      <p class="project-description text-justify"><%= @release.description %></p>
    </div>
    <div class="col-md-3 col-md-offset-1 project-screenshots">
      <div class="pull-right">
        <%= link_to "Back to Project", @project %>
      </div>
      <% if @screenshots.present? %>
        <div class="col-md-12">
          <h4>Screenshots for this release:</h4>
          <hr />
        </div>
        <div class="row">
          <% @screenshots.each do |screenshot| %>
            <div class="thumbnail">
              <%= image_tag screenshot.image.url(:thumb), class: 'img-responsive' %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3 class="page-header">
        Reports
        <small>
          <% if @release.open? %>
            <%= link_to "Add New Report", new_project_release_report_url(@project, @release), class: 'btn btn-sm' %>
          <% end %>
        </small>
      </h3>
      <div>
        <% if @release.project.owner == current_user %>
          <% @release.reports.each do |report| %>
            <div>
              <h4>
                Report #<%= report.id %> |
                <small>
                  Created by <%= report.author.email %> on
                  <%= report.created_at.strftime('%B %d, %Y') %>

                  <%= link_to 'View Report',
                      project_release_report_url(@project, @release, report),
                      class: 'btn btn-sm' %>
                </small>
              </h4>
              <p><%= truncate(report.content, length: 800) %></p>
            </div>
            <hr />
          <% end %>
        <% else %>
          <% @release.reports.each do |report| %>
            <% if report.author == current_user %>
              <div>
                <h4>
                  Report #<%= report.id %> |
                  <small>
                    Created by <%= report.author.email %> on
                    <%= report.created_at.strftime('%B %d, %Y') %>

                    <%= link_to 'View Report',
                    project_release_report_url(@project, @release, report),
                    class: 'btn btn-sm' %>
                  </small>
                </h4>
                <p><%= truncate(report.content, length: 800) %></p>
              </div>
              <hr />
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
