<div class="row">
  <div class="col-md-8">
    <h4><%= link_to truncate(release.title, length: 80), project_release_url(release.project, release) %></h4>
    <p><em>Opened <%= time_ago_in_words(release.created_at) %> ago</em></p>
    <p>
      <%= truncate(release.description, length: 500) %>
    </p>
  </div>

  <div class="col-md-4 text-center">
    <% if @project.owner == current_user %>
    <p><%= link_to "Close Release", close_project_release_url(release.project, release) %></p>
    <% end %>
  </div>
</div>
