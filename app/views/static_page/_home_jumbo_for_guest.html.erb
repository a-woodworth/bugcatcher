<div class="col-md-8 jumbo-content-for-guest">
  <h1>
    Deliver a better experience recruiting an army
    of testers and QA engineers to your product.
  </h1>
</div>

<div class="col-md-4">
  <div class="signup-card">
    <div class="signup-tabs row">
      <div class="col-xs-6 tab active" id="signup-tab">Sign Up</div>
      <div class="col-xs-6 tab" id="signin-tab">Sign In</div>
    </div>
    <div id="signup-form">
      <%= form_for(User.new, url: registration_path(:user)) do |f| %>

        <%= f.email_field :email,
            autofocus: true,
            :class => "form-control",
            placeholder: "email" %>

        <%= f.password_field :password,
            autocomplete: "off",
            :class => "form-control",
            placeholder: "password" %>

            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>

        <%= f.password_field :password_confirmation,
            autocomplete: "off",
            :class => "form-control",
            placeholder: "confirm password" %>

        <%= f.submit "Get started", :class => "btn btn-primary btn-block" %>
      <% end %>
    </div>
    <div id="signin-form">
      <%= form_for(User.new, url: session_path(:user)) do |f| %>
        <%= f.email_field :email,
            autofocus: true,
            :class => "form-control",
            placeholder: "email" %>

        <%= f.password_field :password,
            autocomplete: "off",
            :class => "form-control",
            placeholder: "password" %>

          <div class="form-control remember-me">
            <div class="col-md-6">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <div class="col-md-6">
              <%= link_to "Forgot Password?", new_user_password_url %>
            </div>
          </div>
        <%= f.submit "Log in", :class => "btn btn-primary btn-block"  %>
      <% end %>
    </div>
  </div>

</div>
