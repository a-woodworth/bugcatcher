<% if flash.present? %>
  <div class="flash-container">
    <% flash.each do |name, msg| %>
      <div class="text-center alert <%= name == 'notice' ? 'alert-success' : 'alert-danger' %>">
        <button type="button" class="close" data-dismiss="alert" >&times;</button>
        <%= msg%>
      </div>
    <% end %>
  </div>
<% end %>
