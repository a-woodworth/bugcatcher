<div class="container">
  <% if @report.release.project.owner == current_user && @report.accepted_by_project_owner == nil  %>
    <div class="row" id="acceptAlertBox">
      <div class="alert alert-info" role="alert">
        <p class="lead" style="color: white;">
          This is a new report. Please review and either accept or deny this report.
        </p>
        <br>
        <%= link_to 'Accept this Report', report_accepted_url(@report), class: 'btn btn-success', remote: true %>
        <%= link_to 'Deny this Report', report_denied_url(@report), class: 'btn btn-danger', remote: true %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <%= link_to "< Back to Release", project_release_path(@report.release.project, @report.release) %>
        <h2>
          Report #<%= @report.id %> for <%= truncate(@report.release.title, length: 50) %>
          <%# unless @report.accepted_by_project_owner == nil %>
<!--             <small>
              You have
              <span id="acceptStatus"><%= @report.accepted_by_project_owner %> </span>
              this report
            </small> -->
          <%# end %>
        </h2>
        <h4>
          <small>
            <p>Created on <%= @report.created_at.strftime('%B %d, %Y') %></p>
            <% if @report.author == current_user %>
              <div>
                <%= link_to "Edit Report",
                    edit_project_release_report_url(@project, @release, @report) %> |

                <%= link_to "Delete Report",
                    project_release_report_url(@project, @release, @report), method: "delete" %>
              </div>
            <% end %>

          </small>
        </h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h4><strong>Report Content</strong></h4>
      <hr/>
      <p class="lead text-justify"><%= @report.content %></p>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <h4><strong>Images</strong></h4>
      <hr/>
      <p>IMAGES TO BE ADDED</p>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <h4><strong>Discussion</strong></h4>
      <hr/>
      <p>COMMENTS TO BE ADDED</p>
    </div>
  </div>
</div>
