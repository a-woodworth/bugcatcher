
<div class="container">
  <% if @report.release.project.owner == current_user && @report.accepted_by_project_owner == nil  %>
    <div class="row" id="acceptAlertBox">
      <div class="alert alert-info" role="alert">
        <p class="lead" style="color: white;">
          This is a new report. Please review and either accept or deny this report.
        </p>
        <br>
        <%= link_to 'Accept this Report', report_accepted_url(@report), class: 'btn btn-success', remote: true %>
        <%= link_to 'Deny this Report', report_denied_url(@report), class: 'btn btn-danger', remote: true %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h2>
          Report #<%= @report.id %>
        </h2>
        <h4>
          <small>
            <%= @report.release.project.name %> |
            <%= @report.release.title %> |
            Created on <%= @report.created_at.strftime('%B %d, %Y') %> |

            <% if @report.author == current_user %>
              <%= link_to "Edit Report", [:edit, @release, @report] %> |
              <%= link_to "Delete Report", [@release, @report], method: "delete" %>
            <% end %>
          </small>
        </h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h4><strong>Report Content</strong></h4>
      <hr/>
      <p class="lead"><%= @report.content %></p>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <h4><strong>Images</strong></h4>
      <hr/>
      <p>IMAGES TO BE ADDED</p>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <h4><strong>Discussion</strong></h4>
      <hr/>
      <%#= render "comments/form", comment: @comment %>
    </div>
  </div>
</div>

