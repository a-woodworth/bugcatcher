<%= form_for @project do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  </br>

  <%= f.label :description %>
  <%= f.text_area :description %>

  </br>

  <%= f.label :url %>
  <%= f.text_field :url %>

  </br>

  <%= f.fields_for :screenshots do |f| %>
    <%= render partial: 'screenshot_fields', locals: { f: f } %>
  <% end %>
  </br>
  <%= link_to_add_fields "Add Screenshot", f, :screenshots %>
  </br>

  <%= f.submit %>
<% end %>
