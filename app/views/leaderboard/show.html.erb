<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1>
        Leaderboard

        <%= form_tag '/leaderboard',
            id: "timeForm",
            remote: :true,
            class: "leaderboard-time-interval",
            method: :get do %>

          <%= select_tag(:interval,
                        options_for_select([
                          ['All Time', :alltime],
                          ['Last Month', :monthly]
                        ])) %>
        <% end %>
      </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'leaderboard_table' %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#interval').change(function () {
      $('#timeForm').submit();
    });
  });
</script>



