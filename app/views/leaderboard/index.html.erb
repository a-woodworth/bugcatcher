<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1>Leaderboard</h1>
      <img  src="http://blog.credly.com/wp-content/uploads/2013/11/badgeos-leaderboard.png"
            class="img-circle text-center" style="height: 150px;">
    </div>
  </div>

  <div class="row">
    <hr/>
    <div class="col-md-4 col-md-offset-4 text-center">
      <p>Leaderboard Time Interval</p>
      <%= form_tag '/leaderboard', :id => "timeForm", remote: :true, method: :get do %>
        <%= select_tag(:interval,
                      options_for_select(
                      [
                        ['All Time', :alltime],
                        ['Last Month', :monthly]
                      ]),
                      class: 'form-control') %>
      <% end %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'leaderboard_table' %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#interval').change(function () {
      $('#timeForm').submit();
    });
  });
</script>



